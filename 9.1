#import
import os
#input the directory address
nameOfDirectory = input("Directory address to store the new file: ")
#input name of file
fileToBeMade = input("Enter the name of file to create: ")
#input full name
full_Name = input("Enter your full name: ")
#input full address
full_Address = input("Enter your full address: ")
#input phone number
contactNum = input("Enter your phone number: ")
#begin if statement
if os.path.isdir(nameOfDirectory):
  #make new file
    fileToBeWrittenTo = open(os.path.join(nameOfDirectory, fileToBeMade), "w")
  # data to a comma separated line
    fileToBeWrittenTo.write(full_Name + str(",") + full_Address + str(",") + contactNum)
  
    fileToBeWrittenTo.close()
 #display the data file
    print("The file is: ")

  #open the file
    fileToBeScanned = open(os.path.join(nameOfDirectory, fileToBeMade), "r")

    print(fileToBeScanned.read())
  #close the file
    fileToBeScanned.close()

else:
    # print the error
    print("The directory is non-existent, please try again!")
